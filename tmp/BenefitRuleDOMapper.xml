<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.taobao.gow.mapper.BenefitRuleDOMapper">
  <resultMap id="BaseResultMap" type="com.taobao.gow.bean.BenefitRuleDO">
    <id column="id" property="id" jdbcType="BIGINT"/>
    <result column="gmt_create" property="gmtCreate" jdbcType="DATETIME"/>
    <result column="gmt_modified" property="gmtModified" jdbcType="DATETIME"/>
    <result column="status" property="status" jdbcType="TINYINT"/>
    <result column="operator" property="operator" jdbcType="VARCHAR"/>
  </resultMap>

  <sql id="Base_Column_List">
    gmt_create, gmt_modified, status,
  </sql>

  <insert id="insert" parameterType="com.taobao.gow.bean.BenefitRuleDO" keyProperty="id" useGeneratedKeys="true">
    INSERT INTO benefit_rule (<include refid="Base_Column_List"/>)
    VALUES (NOW(), NOW(), #{status})
  </insert>

  <select id="queryById" resultMap="BaseResultMap" parameterType="java.lang.Long">
    SELECT
    <include refid="Base_Column_List"/>
      FROM benefit_rule
    WHERE id = #{id}
  </select>

  <select id="queryBy" resultMap="BaseResultMap" parameterType="map">
    SELECT
    <include refid="Base_Column_List"/>
    FROM benefit_rule
    <where>
      <if test="id != null">and id = #{id}</if>
      <if test="gmtCreate != null">and gmt_create = #{gmtCreate}</if>
      <if test="gmtModified != null">and gmt_modified = #{gmtModified}</if>
      <if test="status != null">and status = #{status}</if>
    </where>
  </select>

  <delete id="deleteById" parameterType="java.lang.Long">
    DELETE FROM benefit_rule
    WHERE id = #{id}
  </delete>

  <update id="updateById" parameterType="com.taobao.gow.bean.BenefitRuleDO">
    UPDATE benefit_rule
    <set>
      <if test="status != null">status = #{status},</if>
    </set>
    where id = #{id}
  </update>


</mapper>